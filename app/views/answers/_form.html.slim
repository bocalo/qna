/= render 'shared/errors', resource: @answer 

= form_with model: [ @question, @answer ], local: false do |f|
  .answer-errors
    = render 'shared/errors', resource: @answer
    = f.label :body, class: 'form-label'
    = f.text_area :body, class: 'form-control'
    = f.submit 'Create', class: 'btn btn-outline-primary'
  